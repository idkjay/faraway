<div class="columns deviseform">
  <h2 class="top">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <span>
      <%= f.label :email, :class => 'help label' %>
    </span>
    <div class="control has-icons-left">
      <%= f.email_field :email, autofocus: true, :class => 'input is-dark', :type => 'text' %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <span>
      <%= f.label :password, :class => 'help label' %>
    </span>
    <div class="control has-icons-left">
      <%= f.password_field :password, :class => 'input is-dark' %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>

  <div class="actions column">
    <%= f.submit "Log in", :class => 'button is-dark is-outlined' %>
    <%= render "devise/shared/links" %>
  </div>
  <% end %>
</div>
