<div class="columns deviseform">
  <h2 class="top">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
    <span>
      <%= f.label :name, :class => 'help label' %>
    </span>
    <div class="control has-icons-left">
      <%= f.text_field :name, autofocus: true, :class => 'input is-dark', :type => 'text', placeholder:'Dan' %>
      <span class="icon is-small is-left">
        <i class="fas fa-user"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <span>
      <%= f.label :email, :class => 'help label' %>
    </span>
    <div class="control has-icons-left">
      <%= f.email_field :email, autofocus: true, :class => 'input is-dark', :type => 'text', placeholder:'dan@launch.com' %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <span>
      <%= f.label :password, :class => 'help label' %>
    </span>
    <div class="control has-icons-left">
      <%= f.password_field :password, :class => 'input is-dark', placeholder:'Password' %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <span>
      <%= f.label :password_confirmation, :class => 'help label' %>
    </span>
    <div class="control has-icons-left">
      <%= f.password_field :password_confirmation, :class => 'input is-dark', placeholder:'Confirm Password' %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>

  <div class="actions column">
    <%= f.submit "Sign up", :class => 'button is-dark is-outlined' %>
    <%= render "devise/shared/links" %>
  </div>
  <% end %>
</div>

<div class="columns">
  <div class="column flashy">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
</div>
