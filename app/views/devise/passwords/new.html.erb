<div class="columns deviseform">
  <h2 class="top">Forgot your password?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="field column">
    <span>
      <%= f.label :email, :class => 'help label' %>
    </span>
    <div class="control has-icons-left">
      <%= f.email_field :email, autofocus: true, :class => 'input is-dark is-large', :type => 'text', placeholder:'Email' %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Send reset password instructions", :class => 'button is-dark is-outlined is-large' %>
    <%= render "devise/shared/links" %>
  </div>
  <% end %>
  </div>

  <div class="columns">
    <div class="column flashy">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
</div>
